<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/black"
             android:orientation="vertical"
             tools:context="com.borisalexj.dogphoto.ui.CameraActivity">

    <SurfaceView
        android:id="@+id/photo_preview_surface"
        android:layout_width="385dp"
        android:layout_height="385dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--<Button-->
        <!--android:text="done"-->
        <!--android:layout_weight="1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
        <!--<Button-->
        <!--android:onClick="makePhotoClick"-->
        <!--android:layout_weight="1"-->
        <!--android:text="make"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->
        <!--<Button-->
        <!--android:layout_weight="1"-->
        <!--android:text="skip"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:layout_gravity="bottom"
            android:background="@color/black"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1"

                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/business_users_count_TextView"
                    style="@style/BusinessSmallRounds"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="left|center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/small_blue_round"
                    android:gravity="center"
                    android:onClick="goToListClick"
                    android:src="@drawable/ic_home_white_24dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_gravity="center"
                    android:background="@drawable/business_big_image_shape_border"
                    android:gravity="center"
                    android:onClick="onClickPicture"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:background="@drawable/business_big_image_shape"
                    android:gravity="center"
                    android:onClick="onClickPicture"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"/>


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:layout_weight="1"

                android:gravity="center_horizontal|center_vertical"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/toListButton"
                    style="@style/BusinessSmallRounds"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="right|center_horizontal"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/small_green_round"
                    android:gravity="right"
                    android:src="@drawable/ic_check_white_24dp"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
