<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomEditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/edit_textSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|right</item>


    </style>

    <style name="CustomTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/edit_textSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/row_height</item>

    </style>


    <dimen name="edit_textSize">16dp</dimen>
</resources>
