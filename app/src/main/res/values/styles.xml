        <!--<item name="android:background">@drawable/edit_text_shape</item>-->
        <!--<item name="android:singleLine">true</item>-->
        <!--<item name="android:layout_gravity">center</item>-->
        <!--<item name="android:textAlignment">gravity</item>-->
        <!--<item name="android:maxLines">1</item>-->
        <!--<item name="android:lines">1</item>-->
        <!--<item name="android:layout_weight">0</item>-->
        <!--<item name="android:gravity">center_vertical|left</item>-->


    </style>

    <style name="ShowInfoCustomTextView">
        <item name="android:visibility">visible</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textSize">@dimen/edit_textSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:background">@drawable/edit_text_shape</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="ShowLabelCustomTextView">

        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#61000000</item>
        <item name="android:lineSpacingExtra">4sp</item>

    </style>

    <style name="BusinessSmallRounds">
        <item name="android:layout_width">@dimen/business_small_image_with</item>
        <item name="android:layout_height">@dimen/business_small_image_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/small_green_round</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>


    <style name="route_title" parent="android:Widget.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:color">#ffff0000</item>
    </style>

    <style name="CustomAddDetailLayout">
        <item name="android:animateLayoutChanges">true</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>

    </style>

</resources>
